{
	"GET /api": {
		"description": "serves up a json representation of all the available endpoints of the api"
	},
	"GET /api/topics": {
		"description": "serves an array of all topics",
		"queries": [],
		"exampleResponse": {
			"topics": [{ "slug": "football", "description": "Footie!" }]
		}
	},
	"GET /api/users": {
		"description": "serves an array of all users",
		"queries": [],
		"exampleResponse": {
			"username": "butter_bridge",
			"name": "jonny",
			"avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
		}
	},
	"GET /api/articles": {
		"description": "serves an array of all articles",
		"queries": ["author", "topic", "sort_by", "order", "p", "limit"],
		"exampleResponse": {
			"articles": [
				{
					"title": "Seafood substitutions are increasing",
					"topic": "cooking",
					"author": "weegembump",
					"body": "Text from the article..",
					"created_at": "2018-05-30T15:59:13.341Z",
					"votes": 0,
					"comment_count": 6
				}
			],
			"total_count": 13
		}
	},
	"POST /api/articles": {
		"description": "Posts an article",
		"examplePost": {
			"author": "lurker",
			"title": "I like cats",
			"body": "They are cute",
			"topic": "cats",
			"article_img_url": "google.com"
		},
		"exampleResponse": {
			"article_id": 14,
			"author": "lurker",
			"title": "I like cats",
			"topic": "cats",
			"body": "They are cute",
			"created_at": "2023-10-04T15:59:19.175Z",
			"votes": 0,
			"article_img_url": "google.com",
			"comment_count": 0
		}
	},
	"GET /api/articles/:article_id": {
		"description": "serves an a specifc article object based on requested ID",
		"exampleResponse": {
			"article": {
				"article_id": 1,
				"title": "Seafood substitutions are increasing",
				"topic": "cooking",
				"author": "weegembump",
				"body": "Text from the article..",
				"created_at": "2018-05-30T15:59:13.341Z",
				"votes": 0,
				"comment_count": 6,
				"article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
			}
		}
	},
	"GET /api/articles/:article_id/comments": {
		"description": "Serves the comments for a specific article",
		"exampleResponse": {
			"comments": [
				{
					"comment_id": 1,
					"votes": 100,
					"created_at": 1586179020000,
					"author": "butter_bridge",
					"body": "Oh, I've got compassion running out of my nose, pal! I'm the Sultan of Sentiment!",
					"article_id": 9
				}
			]
		}
	},
	"DELETE /api/comments/:comment_id": {
		"description": "Delete a commend from the database using the comment_id"
	},
	"POST /api/articles/:article_id/comments": {
		"description": "Posts a comment for a given article ID",
		"examplePost": {
			"username": "lurker",
			"body": "not enough cheese"
		}
	},
	"PATCH /api/articles/:article_id": {
		"description": "Patches an articles vote count",
		"examplePost": {
			"inc_votes": 100
		},
		"exampleResponse": {
			"comment": {
				"comment_id": 1,
				"votes": 200,
				"created_at": 1586179020000,
				"author": "lurker",
				"body": "not enough cheese",
				"article_id": 9
			}
		}
	},
	"PATCH /api/comment/:comment_id": {
		"description": "Patches a comments vote count",
		"examplePost": {
			"inc_votes": 100
		},
		"exampleResponse": {
			"comment": {
				"comment_id": 1,
				"votes": 200,
				"created_at": 1586179020000,
				"author": "lurker",
				"body": "not enough cheese",
				"article_id": 9
			}
		}
	}
}
